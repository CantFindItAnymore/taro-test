.container
  padding 0 20rpx
  .header
    width 100%
    display flex
    justify-content flex-end
    align-items center
    border-bottom 1rpx solid #ccc
    padding 10rpx
    box-sizing border-box

    .workfolwBtn
      width 100rpx

  .content
    min-height calc(100vh - 250rpx)

  .footer
    height 100rpx
    display flex
    justify-content center
    align-items center
    border-top 1rpx solid #ccc
    margin-top 50rpx
    padding 10rpx
    box-sizing border-box
    .btn
      width 100%
      display flex
