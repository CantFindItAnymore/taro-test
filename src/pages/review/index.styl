
.container
  padding 0 20rpx
  .banner
    width 100%
    height 300rpx
    margin-bottom 20rpx
    overflow hidden
    background url('../../assets/banner.jpeg')
    background-position: center
    background-size: cover
    display flex
    flex-direction column
    justify-content center
    align-items center
    color #fff
    font-weight bolder
    .banner-head
      height 150rpx
      width 150rpx
      overflow hidden
      border-radius 50%
      border 1rpx solid #ccc
      margin-bottom: 20rpx
      background #fff

  .tab
    padding 20rpx 0
